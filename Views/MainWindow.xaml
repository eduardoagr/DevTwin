<?xml version="1.0" encoding="utf-8" ?>
<Window x:Class="DevTwin.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:model="using:DevTwin.Models"
        ResizeMode="NoResize"
        xmlns:vm="clr-namespace:DevTwin.ViewModels"
        Width="600"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Pick your visual studio version: "
                       VerticalAlignment="Center" />
            <ComboBox Width="280"
                      ItemsSource="{Binding VisualStudioFiles}"
                      SelectedItem="{Binding SelectedVisualStudioFile}"
                      MaxWidth="300">

                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal"
                                    VerticalAlignment="Center">
                            <Image Source="{Binding IconBitmap}"
                                   Width="16"
                                   Height="16"
                                   Margin="0,0,5,0" />
                            <TextBlock Text="{Binding DisplayName}"
                                       Margin="5,0,0,0" />
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal"
                    Visibility="{Binding EmulatorsGridVisibility}"
                    Grid.Row="1"
                    Margin="0,20,0,0">

            <TextBlock Text="Pick your emulator: "
                       VerticalAlignment="Center" />

            <ComboBox Width="280"
                      ItemsSource="{Binding AndroidEmulators}"
                      SelectedItem="{Binding SelectedAndroidFile}"
                      MaxWidth="300" />
        </StackPanel>

        <Grid Grid.Row="2" 
              Visibility="{Binding GenerateBatGridVisibility}"
              Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Label Content="Launher Name: "
                   VerticalAlignment="Center" />
            <TextBox Grid.Column="1"
                     Text="{Binding LauncherName}"
                     Width="300" />
            <Button Grid.Column="1"
                    HorizontalAlignment="Right"
                    FocusVisualStyle="{x:Null}"
                    Command="{Binding GenerateCommand}"
                    Height="30"
                    Width="55"
                    FontSize="8"
                    Content="Geneerate" />
        </Grid>
    </Grid>

</Window>
